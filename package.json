{
  "name": "js-utils",
  "version": "0.5.1",
  "author": "Daniel Oakman",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "compile": "bun run scripts/compile.ts",
    "clean": "bun run scripts/clean.ts",
    "merge": "bun run scripts/merge.ts",
    "check": "bunx tsc --noEmit",
    "lint": "bunx eslint --ignore-path .eslintignore ./src --ext .ts",
    "format": "bunx prettier --write **.ts",
    "upgrade-interactive": "bunx npm-check-updates -i",
    "v:patch": "npm version patch -m 'Upgrade to %s'",
    "v:minor": "npm version minor -m 'Upgrade to %s'",
    "v:major": "npm version major -m 'Upgrade to %s'",
    "preversion": "bun check && bun lint && bun test",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-modules-commonjs": "^7.24.1",
    "@types/argparse": "^2.0.16",
    "@types/bun": "^1.0.12",
    "@types/node": "^20",
    "@types/uglify-js": "^3.17.5",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "argparse": "^2.0.1",
    "esbuild": "^0.20.2",
    "esbuild-plugin-d.ts": "^1.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "iteragain-es": "^3.18.4",
    "lint-staged": "^15.2.2",
    "more-node-fs": "^2.0.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.4.4",
    "uglify-js": "^3.17.4"
  },
  "description": "A collection of useful JavaScript utilities that I can't be stuffed copying across repos anymore.",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix"
    ]
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "*.d.ts",
    "*.js",
    "*.js.map"
  ]
}
